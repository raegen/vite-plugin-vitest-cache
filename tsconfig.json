{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "types": [
      "vite/client",
      "vitest/config"
    ]
  },
  "include": ["src"]
}
